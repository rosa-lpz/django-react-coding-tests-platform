# Environment variables for Docker deployment

# Database Configuration
DB_NAME=codingtests
DB_USER=codingtests_user
DB_PASSWORD=your_secure_password_here_change_me

# Django Configuration
DJANGO_SECRET_KEY=your-very-secret-key-change-this-in-production-use-50-chars-minimum
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Admin User (will be created on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure_admin_password_123

# Application Settings
POPULATE_SAMPLE_DATA=true

# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
